{
  "name": "functions",
  "scripts": {
    "lint": "./node_modules/.bin/tslint --project ./tsconfig.json",
    "build": "yarn lint && tsc -w",
    "serve:all": "concurrently --kill-others 'yarn build' 'firebase emulators:start'",
    "serve": "concurrently --kill-others 'yarn build' 'firebase emulators:start --only functions'",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "docs:api": "docker-compose up swagger-redoc"
  },
  "engines": {
    "node": "12"
  },
  "main": "lib/index.js",
  "dependencies": {
    "express": "^4.17.1",
    "firebase-admin": "^8.9.0",
    "firebase-functions": "^3.3.0"
  },
  "devDependencies": {
    "@types/testing-library__dom": "^7.5.0",
    "concurrently": "^5.3.0",
    "firebase-functions-test": "^0.1.6",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
  "private": true
}
